<div class="row justify-content-around align-items-top mt-5">
  <div class="col-6 text-center align-self-center">
    <h3>Total Amount: {{totalAmount}}</h3>
  </div>
  <form method="GET" action="/">
    <div class="form-group">
      <label for="category">Category</label>
      <select class="form-control" id="categoryId" name="categoryId" onchange="submit();">
        <option value="" {{#if (eq categories.compareWith undefined)}}SELECTED{{/if}}>All</option>
        {{#each categories}}
        <option value="{{this._id}}" {{#if (eq this._id this.compareWith)}}SELECTED{{/if}}>{{this.name}}</option>
        {{/each}}
      </select>
    </div>
    <div class="form-group">
      <label for="category">Month</label>
      </br>
      <input type="month" id="month" name="month" value="{{#if monthFilter}}{{monthFilter}}{{else}}{{/if}}"
        onchange="submit();">
    </div>
  </form>
</div>

<ul class="list-group mt-5">
  {{#each records}}
  <li class="list-group-item">
    <div class="row">
      <div class="col-1 text-center align-self-center">
        <span>{{{this.icon}}}</span>
      </div>
      <div class="col-3 align-self-center">
        <h4>{{this.name}}</h4>
        <span>{{this.date}}</span>
      </div>
      <div class="col-2 text-right align-self-center">
        <h4>${{this.amount}}</h4>
      </div>
      <div class="col-2 text-right align-self-center">
        <h4>@{{this.merchant}}</h4>
      </div>
      <div class="col-4 text-center align-self-center">
        <a href="./records/{{this._id}}/edit" class="btn btn-primary">Edit</a>
        <form action="./records/{{this._id}}?_method=DELETE" method="POST" style="display: inline;">
          <button class="btn btn-danger" type="submit" style="display: inline; ">Delete</button>
        </form>
      </div>
    </div>
  </li>
  {{/each}}
</ul>