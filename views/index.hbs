<div class="row justify-content-around align-items-top">
  <div class="col-auto text-center align-self-center">
    <h3>Total Amount: {{totalAmount}}</h3>
  </div>
  <div class="col-3">
    <form method="GET" action="/">
      <div class="form-group">
        <label for="category">Category</label>
        <select class="form-control" id="categoryId" name="categoryId" onchange="submit();">
          <option value="" {{#if (eq categories.compareWith undefined)}}SELECTED{{/if}}>All</option>
          {{#each categories}}
          <option value="{{this._id}}" {{#if (eq this._id this.compareWith)}}SELECTED{{/if}}>{{this.name}}</option>
          {{/each}}
        </select>
      </div>
      <div class="form-group">
        <label for="category">Month</label>
        </br>
        <input type="month" id="month" name="month" placeholder="YYYY-MM"
          value="{{#if monthFilter}}{{monthFilter}}{{else}}{{/if}}" onchange="submit();">
      </div>
    </form>
  </div>
</div>

<ul class="list-group mt-3">
  {{#each records}}
  <li class="list-group-item">
    <div class="row align-items-center">
      <div class="col-1 text-center">
        <span>{{{this.icon}}}</span>
      </div>
      <div class="col-3">
        <h4>{{this.name}}</h4>
        <span>{{this.date}}</span>
      </div>
      <div class="col-3 text-left">
        <h4>@{{this.merchant}}</h4>
      </div>
      <div class="col-2 text-right">
        <h4>${{this.amount}}</h4>
      </div>
      <div class="col-3 text-center">
        <a href="./records/{{this._id}}/edit" class="btn btn-primary">Edit</a>
        <form action="./records/{{this._id}}?_method=DELETE" method="POST" style="display: inline;">
          <button class="btn btn-danger" type="submit" style="display: inline; ">X</button>
        </form>
      </div>
    </div>
  </li>
  {{/each}}
</ul>