<div class="row mt-5">
  <div class="col-6 m-auto" style="min-width: 300px;">
    <div class="card card-body">
      {{#if record}}
      <h1 class="text-center mt-3 mb-3">Edit Record</h1>
      <form action="/records/{{record._id}}?_method=PUT" method="POST">
        {{else}}
        <h1 class="text-center mt-3 mb-3">Add Record</h1>
        <form action="/records" method="POST">
          {{/if}}

          <div class="form-group">
            <label for="name">Title</label>
            <input class="form-control" type="text" id="name" name="name" placeholder="Enter Title"
              value="{{ record.name }}" required>
          </div>

          <div class="form-group">
            <label for="date">Date</label>
            <input class="form-control" type="date" id="date" name="date" value="{{record.date}}" required>
          </div>

          <div class="form-group">
            <label for="categoryName">Category</label>
            <select class="form-control" id="categoryName" name="categoryName" required>
              {{#each categories}}
              <option {{#if (eq this.name this.compareWith)}}SELECTED{{/if}}>
                {{this.name}}
              </option>
              {{/each}}
            </select>
          </div>

          <div class="form-group">
            <label for="amount">Amount</label>
            <input class="form-control" type="number" name="amount" id="amount" placeholder="Enter Amount"
              value="{{ record.amount }}" required>
          </div>
          <button type="submit" class="btn btn-primary btn-block mt-4">Submit</button>
        </form>
    </div>
  </div>
</div>